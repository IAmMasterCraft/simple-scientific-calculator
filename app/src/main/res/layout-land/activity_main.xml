        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toBottomOf="@+id/clearBtn" />

    <Button
        android:id="@+id/addBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:text="@string/add"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/guideline20" />

    <Button
        android:id="@+id/subtractBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/subtract"
        app:layout_constraintBottom_toTopOf="@+id/equalBtn"
        app:layout_constraintEnd_toEndOf="@+id/addBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addBtn"
        app:layout_constraintTop_toBottomOf="@+id/addBtn" />

    <Button
        android:id="@+id/equalBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/equals"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toEndOf="@+id/subtractBtn"
        app:layout_constraintStart_toStartOf="@+id/guideline14" />

    <Button
        android:id="@+id/divideBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/divide"
        app:layout_constraintBottom_toBottomOf="@+id/multiplyBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/multiplyBtn" />

    <Button
        android:id="@+id/multiplyBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/multiply"
        app:layout_constraintBottom_toBottomOf="@+id/addSubtractBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/addSubtractBtn" />

    <Button
        android:id="@+id/addSubtractBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/addSubtract"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:layout_constraintHorizontal_bias="0.0"
