        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/three"
        app:layout_constraintBottom_toBottomOf="@+id/twoBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/twoBtn" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/two"
        app:layout_constraintBottom_toBottomOf="@+id/oneBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/oneBtn" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/one"
        app:layout_constraintBottom_toTopOf="@+id/zeroBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:layout_constraintStart_toStartOf="@+id/guideline19" />

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline19" />

    <Button
        android:id="@+id/decimalBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/smaller_buttons_height"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/decimal"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/guideline15" />

    <Button
        android:id="@+id/nRootXBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/nRootX"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="@+id/rootXBtn" />

    <Button
        android:id="@+id/rootXBtn"
