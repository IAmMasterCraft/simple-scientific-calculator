        app:layout_constraintTop_toBottomOf="@+id/nRootXBtn" />

    <Button
        android:id="@+id/xSquareBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/xSquare"
        app:layout_constraintBottom_toTopOf="@+id/logBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="@+id/rootXBtn"
        app:layout_constraintTop_toBottomOf="@+id/rootXBtn" />

    <Button
        android:id="@+id/naturalLogBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/naturalLog"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintStart_toStartOf="@+id/guideline17" />

    <Button
        android:id="@+id/logBtn"
        style="@style/Theme.SpecialButtons"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_land"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="@string/log"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="@+id/xSquareBtn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="96dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

